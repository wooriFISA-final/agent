# .env.example - Configuration for the Agent System
# Copy this file to .env and modify as needed.

# -- Environment --
# Execution environment: development, staging, or production
AGENT_ENVIRONMENT="development"
AGENT_DEBUG=True

# -- API Server --
AGENT_API_HOST="0.0.0.0"
AGENT_API_PORT=8080
AGENT_API_VERSION="2.1.0"

# -- Logging --
AGENT_LOG_LEVEL="INFO"
AGENT_LOG_FILE="logs/agent_system.log"

# -- Graph Settings --
# Path is relative to the 'agent' directory
AGENT_GRAPH_YAML_PATH="graph/schemas/graph.yaml"
AGENT_MAX_GRAPH_ITERATIONS=10

# -- MCP (Mission Control Protocol) --
AGENT_MCP_URL="http://localhost:8888/mcp/"
AGENT_MCP_CONNECTION_RETRIES=5
AGENT_MCP_CONNECTION_TIMEOUT=2

# -- LLM (Language Model) Settings --
AGENT_LLM_PROVIDER="ollama"
AGENT_LLM_MODEL="qwen3:8b"
# For Ollama, the base URL might be http://localhost:11434
AGENT_LLM_API_BASE_URL= "~~"
AGENT_LLM_TEMPERATURE=0.1
AGENT_LLM_MAX_TOKENS=4096
AGENT_LLM_TIMEOUT=180

# -- Agent Registry --
AGENTS_MODULE_PATH="agent.implementations"